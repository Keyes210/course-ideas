{{#partial "title"}}
    <title>Ideas</title>
{{/partial}}

{{#partial "content"}}
    {{#if username}} <!--if this variable exists in the model-->
        <h1>Welcome {{username}}!</h1>
        <p>View <a href="/ideas">all course ideas</a>.</p> <!--get request for "ideas" need to catch in Main ** -->
    {{else}}
        <h1>Welcome Students!</h1>

        <form action="/sign-in" method="post">
            <input type="text" placeholder="What's your username?" name="username">
            <button>Sign in</button>
        </form>
    {{/if}}
{{/partial}}

{{> base.hbs}}